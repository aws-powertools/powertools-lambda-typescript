    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@aws-lambda-powertools/commons": "^2.20.0"
  },
  "devDependencies": {
    "@protobuf-ts/plugin": "^2.11.0",
    "avro-js": "^1.12.0",
    "protobufjs": "^7.5.3",
    "zod": "^3.25.49"
  }
}
